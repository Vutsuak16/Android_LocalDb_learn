<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="echo.local_database_ipl.Activity2"
    android:id="@+id/rl">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Mahendra Singh Dhoni"
        android:layout_marginTop="65dp"
        android:background="@drawable/border"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/franchise"
        android:layout_alignStart="@+id/franchise" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/franchise"
        android:background="@drawable/border"
        android:hint="Rising Pune Supergiants"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"

        android:background="@drawable/border"
        android:hint="16 (in crores)"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/franchise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/add"
        android:layout_below="@+id/price"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/view"
        android:layout_alignTop="@+id/add"
        android:layout_toRightOf="@+id/franchise"
        android:layout_toEndOf="@+id/franchise" />

</RelativeLayout>
